{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb",
        "airbnb/hooks",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns": [
        "*.map",
        "*bundle.js*",
        "node_modules"
    ],
    "rules": {
        "no-console": [
            "error",
            {
                "allow": [
                    "error",
                    "info"
                ]
            }
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 2
            }
        ]
    }
}
